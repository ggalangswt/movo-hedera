# Server Configuration
PORT=4000
NODE_ENV=production

# Database Configuration
# IMPORTANT: Add connection pooling parameters for production!
# Format: postgres://user:password@host:port/database?params
# 
# Recommended parameters:
# - connection_limit=5-10 (adjust based on your db plan)
# - pool_timeout=10-20 (seconds to wait for connection)
# - connect_timeout=10 (seconds to establish connection)
# - sslmode=require (for secure connections)
#
# Example for Aiven:
# DATABASE_URL="postgres://user:pass@host:port/db?sslmode=require&connection_limit=5&pool_timeout=10"
DATABASE_URL="postgres://user:password@host:port/database?sslmode=require&connection_limit=5&pool_timeout=10"

# Merchant Configuration
MERCHANT_WALLET_ADDRESS=0xYourMerchantWalletAddress
